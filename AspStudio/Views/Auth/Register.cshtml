@model AspStudio.Models.DTOs.UserD.UsersDTO
@* @page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
	ViewData["AppWithoutHeader"] = true;
	ViewData["AppWithoutSidebar"] = true;
	ViewData["AppWithoutContainer"] = true;
} *@

<!-- BEGIN register -->
<div class="register">
	<!-- BEGIN register-content -->
	<div class="register-content">
		<form asp-action="Register" method="post">
			<h1 class="text-center">Sign Up</h1>
			<p class="text-muted text-center">One Admin ID is all you need to access all the Admin services.</p>
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="FirstName" class="form-label"></label>
				<input asp-for="FirstName" class="form-control form-control-lg fs-15px" value="" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="LastName" class="form-label"></label>
				<input asp-for="LastName" class="form-control form-control-lg fs-15px" value="" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Mobile" class="form-label"></label>
				<input asp-for="Mobile" class="form-control form-control-lg fs-15px" value="" />
				<span asp-validation-for="Mobile" class="text-danger"></span>
			</div>
			
			<div class="mb-3">
				<label asp-for="Gender" class="form-label"></label>
				<input asp-for="Gender" class="form-control form-control-lg fs-15px" value="" />
				<span asp-validation-for="Gender" class="text-danger"></span>
			</div>
			
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" class="form-control form-control-lg fs-15px" placeholder="e.g John Smith" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control form-control-lg fs-15px" value="" />
			</div>
			<div class="mb-3">
				<label asp-for="ConfirmPassword" class="form-label"></label>
				<input asp-for="ConfirmPassword" class="form-control form-control-lg fs-15px" value="" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<button type="submit" class="btn btn-theme btn-lg fs-15px fw-500 d-block w-100">Sign Up</button>
			</div>
			<div class="text-muted text-center">
				Already have an Admin ID? Sign In</a>
			</div>
		</form>
	</div>
	<!-- END register-content -->
</div>
<!-- END register -->
<!--  Small modal example -->
<div class="modal fade bs-example-modal-sm" id="responsemodal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="mySmallModalLabel">Alert!</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p id="successMessage"></p>
				<p id="errorMessage"></p>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
<script>
	$(document).ready(function () {

	@if (TempData["SuccessMessage"] != null)
	{

		<text>
						// Show success popup
					$("#successMessage").text('@TempData["SuccessMessage"]');
					$("#responsemodal").modal("show");
		</text>
	}
	@if (TempData["ErrorMessage"] != null)
	{

		<text>
						// Show error popup
					$("#errorMessage").text('@TempData["ErrorMessage"]');
					$("#responsemodal").modal("show");
		</text>
	}
					});
</script>